{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es2017", "es7", "es6", "dom"],
    "declaration": true,
    "allowJs": true,
    "outDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "JSX.createElement",
    "jsxFragmentFactory": "JSX.Fragment"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/__tests__/*"],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "includeVersion": true,
    "gitRevision": "main",
    "hideGenerator": true,
    "excludePrivate": true
  }
}
